{
  "name": "unionimpact/erp-poc",
  "description": "Hybrid SaaS ERP PoC for US Labor Unions (Laravel 12 + Vue, modular monolith, Spatie Multitenancy v4, Sanctum).",
  "type": "project",
  "require": {
    "php": "^8.3",
    "laravel/framework": "^12.0",
    "laravel/sanctum": "^4.0",
    "laravel/tinker": "^2.10.1",
    "spatie/laravel-multitenancy": "^4.0"
  },
  "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Modules\\": "modules/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      ""
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
