{
  "name": "unionimpact/erp-poc",
  "description": "Hybrid SaaS ERP PoC for US Labor Unions (Laravel 12 + Vue, modular monolith, Spatie Multitenancy v4, Sanctum).",
  "type": "project",
  "require": {
    "php": "^8.3",
    "laravel/framework": "^12.0",
    "laravel/sanctum": "^4.0",
    "spatie/laravel-multitenancy": "^4.0"
  },
  "require-dev": {
    "laravel/pint": "^1.15",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Modules\\": "modules/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@php artisan package:discover --ansi"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
